package PageObjects;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;

public class LoginPageObjects {

	private WebDriver driver;

	public LoginPageObjects(WebDriver driver){
		this.driver = driver;
	}

	By logIn_Button = By.xpath("//a[contains(text(),'Log in')]");
	By userName_TxtField = By.xpath("//input[@name='email']");
	By passWord_TxtField = By.xpath("//input[@name='password']");
	By submit_Button = By.xpath("//button[@name='submit-button']");

	public WebElement getLogInButton(){
		return driver.findElement(logIn_Button);	
	}

	public WebElement userNameTextField(){
		return driver.findElement(userName_TxtField);
	}

	public WebElement passwordTextField(){
		return driver.findElement(passWord_TxtField);
	}

	public WebElement submitButton(){
		return driver.findElement(submit_Button);
	}


}
